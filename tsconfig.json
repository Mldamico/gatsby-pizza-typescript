{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "strict": false,
    "noEmit": true, // you don't need to emit TS files on compile
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "lib": ["dom", "es2015", "es2017", "es2019"],
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false
  },
  "exclude": [
    "./node_modules",
    "./public",
    "./.cache",
    "gatsby-config.js",
    "gatsby-node.js",
    "./gatsby-browser.ts",
    "./gatsby-ssr.ts"
  ],
  "include": ["./src/**/*", "./typings/**/*"]
}

